import sys
import os

# Figure out the absolute path to the packet-detector/src directory
BASE_DIR = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
STREAMING_DIR = os.path.abspath(os.path.join(BASE_DIR, '../packet-detector/src'))
if STREAMING_DIR not in sys.path:
    sys.path.insert(0, STREAMING_DIR)
